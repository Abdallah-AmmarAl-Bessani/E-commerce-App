@model E_Commerce_App.Models.DTO.UserDTO

@{
    ViewData["Title"] = "Home Page";
}


<div class="pt-5 align-content-center">
    @if (Model == null)
    {
        <h3 class=" fs-2 fw-bold text-center pt-5 ">Hello dude Anonymous if you want to use all services <span class="text-warning">Please Login In :)</span> </h3>
    }
    else
    {
        <h3 class=" fs-2 fw-bold text-center">Welcome  <span class="text-warning">@Model.UserName!</span></h3>
    }
</div>

<div class="d-flex flex-column justify-content-center m-auto align-items-center vh-100">
    <div class="search-box">
        <button class="btn-search"><i class="fas fa-search"></i></button>
        <input type="text" class="input-search" placeholder="Type to Search..." onkeyup="showHint(this.value)" />
    </div>

    <div id="textHint" class="d-flex flex-column my-4">
    </div>

</div>


