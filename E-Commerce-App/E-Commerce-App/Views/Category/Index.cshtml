@model IEnumerable<E_Commerce_App.Models.Category>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<UserInterface> SignInManager
@{
    ViewData["Title"] = "Admin Dashboard";
}
    <h1>Admin Dashboard</h1>
@if (User.IsInRole("Admin"))
{
    <a class="btn btn-success d-flex float-end" asp-action="AddCategory">Add</a>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Department"
                       asp-action="Departments"
                       asp-route-categoryId="@item.ID">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    <a asp-action="CategoryDetails" asp-route-id="@item.ID">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
