@model IEnumerable<E_Commerce_App.Models.Category>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<UserInterface> SignInManager
@{
    ViewData["Title"] = "Admin Dashboard";
}



<div class="d-flex flex-column min-vh-100">
    <div class="text-center mb-3 pt-2">
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-success d-flex float-end" asp-action="AddCategory">Add</a>
        }
    </div>

    <div class="card-deck d-flex flex-column flex-md-row gap-2 align-items-center justify-content-center mt-5">
        @foreach (var item in Model)
        {
            <div class="card gap-3 z-6 rounded-4 border border-primary" style="width: 18rem;">
                <div class="crad-img py-2 bg-light rounded-4">
                    @if (item.ImageURL == null)
                    {

                        <img src="https://ammarltuc.blob.core.windows.net/images/785054-ecommerce-istock-020119.jpg" class="categoryImg card-img-top circleImg" alt="Image Alt Text">

                    }
                    else
                    {
                        <img src="@item.ImageURL" class="card-img-top categoryImg circleImg" alt="Image Alt Text" style="height:12rem;">
                    }
                </div>
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                   <div class="x d-flex flex-column flex-md-row">
                        <a asp-controller="Department" asp-action="Departments" asp-route-categoryId="@item.ID" class="btn btn-primary me-2">View Departments</a>
                        <a asp-action="CategoryDetails" asp-route-id="@item.ID" class="btn btn-secondary px-3">Details</a>
                    </div>
           
                </div>
            </div>
        }
    </div>
</div>
