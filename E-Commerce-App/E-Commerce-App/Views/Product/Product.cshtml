@model IEnumerable<Product>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<UserInterface> SignInManager
@{
	ViewData["Title"] = "AddProduct";
	var departmentId = ViewContext.HttpContext.Request.Query["departmentID"];
}

@if (User.IsInRole("Admin"))
{
	<div class="d-flex flex-row-reverse">
		<button>
			<a asp-controller="Product" asp-action="AddProduct" asp-route-departmentID="@departmentId">Add</a>
		</button>
	</div>
	
}

<ul>
	@foreach (var pr in Model)
	{
		<div>
			<ul class="d-flex list-unstyled ">
				<li class="me-4">@pr.Name</li>
				<li class="me-4">@pr.Quantity</li>
				<li class="me-4">@pr.Price</li>
			</ul>
			<a asp-action="ProductDetails" asp-route-id="@pr.ID">Detail</a>
		</div>
	}
</ul>




