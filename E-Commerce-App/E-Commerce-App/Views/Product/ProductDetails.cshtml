@model E_Commerce_App.Models.Product
@using Microsoft.AspNetCore.Identity
@inject SignInManager<UserInterface> SignInManager
@{
    ViewData["Title"] = "ProductDetails";
    var departmentId = ViewContext.HttpContext.Request.Query["departmentID"];
    
}
<h1>ProductDetails</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
    </dl>

</div>



<div>
    @if (User.IsInRole("User"))
    {
        @Html.ActionLink("Edit", "EditProduct", new { ID = Model?.ID })
    }
    @if (User.IsInRole("Admin"))
    {
        @* <a asp-action="DeleteProduct" asp-route-id="@Model?.ID">Delete</a> *@
        @Html.ActionLink("Delete", "DeleteProduct", new { id = Model?.ID})
    }
    <a asp-action="Product" asp-route-departmentID="@departmentId">Back to List</a>
</div>
