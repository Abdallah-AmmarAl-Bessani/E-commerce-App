@{
    <p>
        <b>Start Typing a name of product in the input field below:</b>
    </p>
    <form asp-action="GetSuggestions">
        <label for="product">Product:</label>
        <input type="text" name="product" id="product" onkeyup="showHint(this.value)">
    </form>
    <p>Suggestions:</p>
    <div id="textHint">
    </div>
    <script src="/js/ajax.js"></script>
}
