@model E_Commerce_App.Models.DTO.LogInDTO

@{
	ViewData["Title"] = "Login Page";
}
<h1 class="text-white">Login page</h1>

<h4 class="text-white">Login</h4>
<hr />


<form asp-action="Login" class="text-light position-absolute top-50 start-50 translate-middle">
	<div class="form-group">
		<label class="sr-only" for="UserName">Username:</label>
		<input type="text" asp-for="UserName" class="form-control" placeholder="Username">
		<div class="mt-2">
			<span asp-validation-for="UserName" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group">
		<label class="sr-only" for="Password">Password:</label>
		<input type="password" asp-for="Password" class="form-control" placeholder="***********">
		<div class="mt-2">
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group d-flex justify-content-center">
		<input type="submit" value="login" class="btn btn-primary m-2 p-1 px-4" />
	</div>
</form>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>



