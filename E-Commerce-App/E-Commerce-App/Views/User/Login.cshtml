@model E_Commerce_App.Models.DTO.LogInDTO
@{
	ViewData["Title"] = "Login Page";
}

<div id="accountContainer"
	 class="container shadow rounded-4 d-flex flex-column   p-4 col-11 col-sm-10 col-md-8 col-lg-7 col-xl-4 m-auto text-dark  position-absolute top-50 start-50 translate-middle bg-light rounded-3">
    <div class="row flex-column z-4">
		<h1 class=" my-3 text-center">Login Form</h1>

		<form asp-action="Login" class="">
			<div class="form-group my-3">
				<label  for="UserName">Username:</label>
				<input type="text" asp-for="UserName" class="form-control" placeholder="Username">
				<div class="mt-2">
					<span asp-validation-for="UserName" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group my-3">
				<label  for="Password">Password:</label>
				<input type="password" asp-for="Password" class="form-control" placeholder="***********">
				<div class="mt-2">
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group d-flex justify-content-center my-3">
				<input type="submit" value="login" class="btn btn-primary m-2 p-2 px-4 rounded-3" />
			</div>
		</form>
        </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}