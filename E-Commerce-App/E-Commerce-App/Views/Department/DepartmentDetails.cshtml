@model E_Commerce_App.Models.Department
@using Microsoft.AspNetCore.Identity
@inject SignInManager<UserInterface> SignInManager
@{
    ViewData["Title"] = "Department Details";
}

<h1>DepartmentDetails</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    @if ((User.HasClaim(c => c.Type == "permissions" && c.Value == "update")) && User.IsInRole("User"))
    {
    @Html.ActionLink("Edit", "EditDepartment", new { ID = Model.ID, CategoryID=Model.CategoryID })
        
    }
    @if (User.IsInRole("Admin"))
    @Html.ActionLink("Delete", "DeleteDepartment", new { departmentId = Model.ID , categoryId = Model.CategoryID})
    <a asp-action="Departments"
       asp-route-categoryId="@Model.CategoryID">Back to List</a>
</div>

