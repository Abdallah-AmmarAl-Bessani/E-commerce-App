@model IEnumerable<Department>
@{
    <div class="text-center">
    <h1> Departments  </h1>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {


                <tr>
                    <td>
                        <a asp-controller="Product" asp-action="Product" asp-route-departmentID="@item.ID"> @Html.DisplayFor(modelItem => item.Name)</a>
                    </td>
                    <td>
                        <a asp-action="DepartmentDetails" asp-route-departmentId="@item.ID">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
